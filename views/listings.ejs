<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >
  <!-- External CSS -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <!-- App CSS -->
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/nav.css" />
  <link rel="stylesheet" href="/styles/posts.css" />
</head>

<body>
  <%- include('partials/_navbar') %>
  <header class="page-header">My Listings</header>
  <main>
    <section class="container-vertical">
      <% for (const listingKeys in listings) { %>
      <div class="thread-container">
        <div class="single-container">
          <header>
            <div><%= listings[listingKeys].name %></div>
            <div>DATE POSTED</div>
          </header>
          <div class="container-lower">
            <div id="image">IMAGE</div>
            <article>
              <%= listings[listingKeys].description %>
            </article>
            <div id="item-price">
              <div>$<%= listings[listingKeys].price %></div>
            </div>
          </div>
          <footer>
            <div class="status-flags">
              <div id="is-sold">SOLD!</div>
            </div>
            <div>
              <button>View</button>
              <button>Delete</button>
              <button>Mark Sold</button>
            </div>
          </footer>
        </div>
      </div>
      <% } %>
    </section>
  </main>

</body>

</html>
