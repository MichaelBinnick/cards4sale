<!DOCTYPE html>
<html lang="en">

<head>
  <title>My Listings</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >
  <!-- External CSS -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Bangers&family=Roboto+Condensed:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <!-- External JS -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

  <!-- App CSS -->
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/nav.css" />
  <link rel="stylesheet" href="/styles/posts.css" />
  <!-- Internal JS -->
  <script src="/scripts/delete.js" type="text/javascript"></script>
</head>

<body>
  <%- include('partials/_navbar') %>
  <header class="page-header">My Listings</header>
  <main>
    <section class="container-vertical">
      <% for (const listingKeys in listings) { %>

      <div class="thread-container">
        <div class="single-container">
          <header>
            <div><%= listings[listingKeys].name %></div>
            <div>posted <%= String(listings[listingKeys].time_created).slice(4, 15) %></div>
          </header>
          <div class="container-lower">
            <article>
              <%= listings[listingKeys].description %>
            </article>
          </div>
          <footer>
            <div id="item-price">
              <div>$<%= listings[listingKeys].price %></div>
            </div>
            <div>
              <form action = "/listings/<%= listings[listingKeys].id %>" method="GET">
                <button type="submit">View</button>
              </form>
              <form action = "/edit/<%= listings[listingKeys].id %>" method="GET">
                <button type="submit">Edit</button>
              </form>
              <button class="delete-button" >Delete</button>
              <div style="display: none" class="listing-key"><%= listings[listingKeys].id %></div>

              <% if (!listings[listingKeys].is_sold) { %>
              <button class="mark-sold">Mark Sold</button>
              <div style="display: none" class="listing-key"><%= listings[listingKeys].id %></div>
              <% } %>

              <% if (listings[listingKeys].is_sold) { %>
                <button style="color: red" class="mark-unsold">SOLD!</button>
                <div style="display: none" class="listing-key"><%= listings[listingKeys].id %></div>
              <% } %>

            </div>
          </footer>
        </div>
      </div>
      <% } %>
    </section>
  </main>




